{
  "pluginAlias": "HomebridgeSmartThingsACoAuth",
  "pluginType": "platform",
  "singular": true,
  "schema": {
    "type": "object",
    "properties": {
      "authToken": {
        "title": "API Auth Token",
        "type": "string",
        "required": true,
        "default": ""
      },
      "refreshToken": {
        "title": "API Refresh Token",
        "type": "string",
        "required": true,
        "default": ""
      },
      "clientId": {
        "title": "API Client ID",
        "type": "string",
        "required": true,
        "default": ""
      },
      "clientSecret": {
        "title": "API Client Secret",
        "type": "string",
        "required": true,
        "default": ""
      },
      "minTemperature": {
        "title": "Minimum temperature",
        "type": "integer",
        "required": true,
        "default": 16,
        "minimum": 16,
        "maximum": 30
      },
      "maxTemperature": {
        "title": "Maximum temperature",
        "type": "integer",
        "required": true,
        "default": 30,
        "minimum": 16,
        "maximum": 30
      },
      "updateInterval": {
        "title": "Fetch device status interval (sec)",
        "type": "integer",
        "required": true,
        "default": 15,
        "minimum": 5
      }
    }
  }
}